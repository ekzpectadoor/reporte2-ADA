import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_csv('dragons_performance.csv')

# Gráfico 1: Tiempo de ejecución vs n
plt.figure(figsize=(10, 5))
plt.plot(df['n'], df['time_ms'], 'o-')
plt.title('Tiempo de ejecución vs Número de dragones')
plt.xlabel('Número de dragones (n)')
plt.ylabel('Tiempo (ms)')
plt.grid(True)
plt.savefig('tiempo_vs_n.png')

# Gráfico 2: Iteraciones vs n
plt.figure(figsize=(10, 5))
plt.plot(df['n'], df['iterations'], 'r--')
plt.title('Iteraciones vs Número de dragones')
plt.xlabel('Número de dragones (n)')
plt.ylabel('Iteraciones')
plt.grid(True)
plt.savefig('iteraciones_vs_n.png')

plt.show()